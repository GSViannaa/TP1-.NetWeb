@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h1>Lista de Produtos</h1>

<table>
    <thead>
        <tr>
            <th>Nome</th>
            <th>Preço</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var produto in Model.Produtos)
        {
            <tr>
                <td>@produto.Nome</td>
                <td>R$ @produto.Preco.ToString("F2")</td>
            </tr>
        }
    </tbody>
</table>
